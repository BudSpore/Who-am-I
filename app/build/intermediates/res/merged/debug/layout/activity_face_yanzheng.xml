<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newback1">

    <ImageView
        android:id="@+id/online_img"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:padding="4dp"

        android:src="@drawable/no_photo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/online_pick"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/s1_"
        android:layout_marginTop="500dp"
        />

    <Button
        android:id="@+id/online_camera"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@drawable/s2_"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/online_pick"
        android:layout_toRightOf="@+id/online_pick" />
    <Button
        android:id="@+id/online_verify"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:background="@drawable/s4_"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/online_pick"
        android:layout_toRightOf="@+id/online_camera" />
      />

</RelativeLayout>